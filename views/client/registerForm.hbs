<header>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title> Create Account | Batu Steak House</title>

</header>

<div class="modal-left">
  <img id="modal-img-left" src="/static/svg/modal-right.svg" alt="">
</div>
<div class="modal-right">
  <img id="modal-img-right" src="/static/svg/modal-left.svg" alt="">
</div>
<div class="form_container">
  <fieldset>
    <p><a class="close" title="Reset the register form" onclick="ResetForm()" id="closeMe" rel="nofollow">&times;</a>
    </p>
    <legend>
      <i style="color:#eb4f37" class="far fa-user-circle fa-2x"></i>
      <span style="margin: auto;">
        Create Your Account
      </span>
    </legend>
    <div class="social-links-form">
      <a href=""><i class="fab fa-facebook fa-2x"></i></a>
      <a href=""><i class="fab fa-github fa-2x"></i></a>
      <a href=""><i class="fab fa-app-store fa-2x"></i></a>
      <a href=""><i class="fab fa-google-play fa-2x"></i></a>
    </div>
    <div style="width: 100%; height: 17px; border-bottom: 1px solid #eccbbf; text-align: center;">
      <span style="font-size: 15px; background-color: #24252a; color:#eccbbf; padding: 0px 17px;">
        or
      </span>
    </div>
    <form id="signup_form" method="POST" novalidate>
      {{!-- user-types --}}
      <br>
      <input type="radio" name="is_admin" id="customer" value="client">
      <input type="radio" name="is_admin" id="admin" value="admin">
      <div class="switch">
        <label for="customer">Customer</label>
        <label for="admin">Administrator</label>
      </div>
      {{#if userTypeErr}}
      {{#each userTypeErr}}
      <span class="userTypeErr">{{this.msg}}</span>
      {{/each}}
      {{/if}}
      {{#if registerErr}}
      {{#each registerErr}}
      <span class="userTypeErr">{{this.msg}}</span>
      {{/each}}
      {{/if}}
      {{!-- user-types --}}
      <br>
      <p class="isValid">
        <label style="margin-top:4px" for="name">
          <input type="text" id="username" name="username" placeholder="First Name *" value="{{data.username}}">
          <span class="signup_error"></span>
        </label>
      </p>
      <p class="isValid">
        <label for="lastname">
          <input type="text" id="lastname" name="lastname" placeholder="Last Name *" value="{{data.lastname}}">
          <span class="signup_error"></span>
        </label>
      </p>
      <p class="isValid">
        <label for="mail_signup">
          <input type="email" id="email" name="email" placeholder="Your Email *" value="{{data.email}}" />
          <span class="signup_error"></span>
        </label>
      </p>
      <p class="isValid">
        <label for="password">
          <input type="password" id="password" name="password" placeholder="Password *" value="{{data.password}}">
          <span class="signup_error"></span>
        </label>
      </p>

      <div style="margin-top:52px">
        <button type="submit" class="register-btn"><span>Create New Account</span></button>
        <script type="text/javascript" src="/scripts/signup-form.js"></script>
      </div>

</div>
</form>
</fieldset>